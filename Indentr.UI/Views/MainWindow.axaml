<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:Indentr.UI.Controls"
        x:Class="Indentr.UI.Views.MainWindow"
             Icon="avares://Indentr.UI/Assets/icon.png"
        Title="Indentr"
        Width="1200" Height="760"
        WindowStartupLocation="CenterScreen"
        KeyDown="OnKeyDown">

    <DockPanel>
        <!-- Menu bar -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Search…"          Click="OnSearchClicked" />
                <MenuItem Header="S_cratchpad"       Click="OnScratchpadClicked" />
                <MenuItem Header="_Manage Notes…"    Click="OnManageClicked" />
                <MenuItem Header="_Trash…"           Click="OnTrashClicked" />
                <Separator />
                <MenuItem Header="Switch _Profile…"  Click="OnManageProfilesClicked" />
                <Separator />
                <MenuItem Header="E_xit"             Click="OnExitClicked" />
            </MenuItem>
        </Menu>

        <!-- Sync status bar — hidden when no remote is configured -->
        <Border DockPanel.Dock="Bottom"
                x:Name="SyncBar"
                IsVisible="False"
                BorderThickness="0,1,0,0"
                Padding="8,3">
            <Grid ColumnDefinitions="*,Auto">
                <TextBlock Grid.Column="0"
                           x:Name="SyncStatusText"
                           VerticalAlignment="Center"
                           FontSize="12"
                           Opacity="0.75" />
                <Button Grid.Column="1"
                        x:Name="SyncNowButton"
                        Content="Sync now"
                        FontSize="12"
                        Padding="8,2"
                        Click="OnSyncNowClicked" />
            </Grid>
        </Border>

        <controls:NoteEditorControl x:Name="RootEditor" />
    </DockPanel>
</Window>
