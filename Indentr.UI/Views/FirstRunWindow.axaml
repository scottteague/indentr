<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Indentr.UI.Views.FirstRunWindow"
        Icon="avares://Indentr.UI/Assets/icon.png"
        Title="Profile Setup"
        Width="420"
        SizeToContent="Height"
        WindowStartupLocation="CenterScreen"
        CanResize="False">

    <StackPanel Margin="24" Spacing="10">
        <TextBlock x:Name="HeadingText"    FontSize="18" FontWeight="Bold" />
        <TextBlock x:Name="SubheadingText" TextWrapping="Wrap" />

        <Separator />

        <TextBlock Text="Profile Name" FontWeight="SemiBold" />
        <TextBox x:Name="ProfileNameBox" Watermark="e.g. Personal, Work, Testing" />

        <TextBlock Text="Username" FontWeight="SemiBold" Margin="0,4,0,0" />
        <TextBox x:Name="UsernameBox" Watermark="Your Indentr username" />

        <TextBlock Text="Local Database" FontWeight="SemiBold" Margin="0,8,0,0" />

        <Grid ColumnDefinitions="*,8,80" RowDefinitions="Auto">
            <TextBox Grid.Column="0" x:Name="DbHostBox" Watermark="Host" />
            <TextBox Grid.Column="2" x:Name="DbPortBox" Watermark="Port" />
        </Grid>

        <TextBox x:Name="DbNameBox"     Watermark="Database name" />
        <TextBox x:Name="DbUserBox"     Watermark="PostgreSQL username" />
        <TextBox x:Name="DbPasswordBox" Watermark="Password (leave blank if none)" PasswordChar="●" />

        <Separator Margin="0,4,0,0" />

        <CheckBox x:Name="EnableRemoteBox"
                  Content="Enable remote sync database"
                  IsCheckedChanged="OnEnableRemoteChanged" />

        <StackPanel x:Name="RemotePanel" IsVisible="False" Spacing="6">
            <TextBlock Text="Remote Database" FontWeight="SemiBold" Margin="0,4,0,0" />

            <Grid ColumnDefinitions="*,8,80" RowDefinitions="Auto">
                <TextBox Grid.Column="0" x:Name="RemoteHostBox" Watermark="Host" />
                <TextBox Grid.Column="2" x:Name="RemotePortBox" Watermark="Port" />
            </Grid>

            <TextBox x:Name="RemoteDbNameBox"     Watermark="Database name" />
            <TextBox x:Name="RemoteDbUserBox"     Watermark="PostgreSQL username" />
            <TextBox x:Name="RemoteDbPasswordBox" Watermark="Password (leave blank if none)" PasswordChar="●" />

            <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,2,0,0">
                <Button x:Name="TestConnectionButton"
                        Content="Test connection"
                        Click="OnTestConnectionClicked" />
                <TextBlock x:Name="TestResultText"
                           VerticalAlignment="Center"
                           TextWrapping="Wrap"
                           IsVisible="False" />
            </StackPanel>
        </StackPanel>

        <TextBlock x:Name="ErrorText" Foreground="Red" IsVisible="False" TextWrapping="Wrap" />

        <Button x:Name="OkButton" HorizontalAlignment="Right" Click="OnOkClicked" Margin="0,4,0,0" />
    </StackPanel>
</Window>
