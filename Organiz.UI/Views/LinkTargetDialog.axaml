<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Organiz.UI.Views.LinkTargetDialog"
             Icon="avares://Organiz.UI/Assets/icon.png"
        Title="Insert Link"
        Width="420" Height="140"
        WindowStartupLocation="CenterOwner"
        CanResize="False">

    <StackPanel Margin="20" Spacing="12">
        <TextBlock Text="Link target (URL or note:UUID):" />
        <TextBox x:Name="TargetBox" Watermark="https://… or note:xxxxxxxx-…" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
            <Button Content="OK"     Click="OnOk" />
            <Button Content="Cancel" Click="OnCancel" />
        </StackPanel>
    </StackPanel>
</Window>
